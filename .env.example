# .env.example
# Copy this file to `.env` and replace the values with your own secrets and config

# === OpenAI API Configuration ===
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# === Embeddings Configuration ===
EMBEDDING_MODEL=text-embedding-ada-002

# === Vector Store Configuration ===
CHROMA_DB_IMPL=duckdb
CHROMA_PERSIST_DIRECTORY=.chroma

# === Tracing / Logging ===
NAI_ENABLE_TRACING=true
NAI_LOG_LEVEL=info

# === Evaluation Settings ===
NAI_EVAL_METRICS=ragas
NAI_EVAL_THRESHOLD=0.7

# === Custom Pipeline Hooks (optional) ===
NAI_HOOKS_PATH=./hooks

# === CLI Defaults ===
NAI_DEFAULT_PIPELINE=quickstart

# === Optional Proxy (if needed) ===
HTTP_PROXY=
HTTPS_PROXY=
